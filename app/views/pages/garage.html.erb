<h1>My Garage</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Year</th>
      <th>Make</th>
      <th>Model</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.name %></td>
        <td><%= vehicle.model_year %></td>
        <td><%= vehicle.make %></td>
        <td><%= vehicle.model %></td>
        <td><%= link_to fa_icon('angle-double-right'), vehicle %></td>
        <td><%= link_to fa_icon('pencil-square-o'), edit_vehicle_path(vehicle) if logged_in?(:site_admin)  %></td>
        <td><%= link_to fa_icon('trash'), vehicle, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "Add Vehicle", new_vehicle_path, class: "btn btn-lg btn-secondary" %>
