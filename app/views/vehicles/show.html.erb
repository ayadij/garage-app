<div class="row al-center">
  <div class="col-md-12">
    <h1> <%= @vehicle.name %> </h1>
  </div>
</div>



<div class="row">
  <div class="col-md-6 left-al">

    <p>
      <strong>Model year:</strong>
      <%= @vehicle.model_year %>
    </p>

    <p>
      <strong>Make:</strong>
      <%= @vehicle.make %>
    </p>

    <p>
      <strong>Model:</strong>
      <%= @vehicle.model %>
    </p>

    <p>
      <strong>Trim level:</strong>
      <%= @vehicle.trim_level %>
    </p>

    <p>
      <strong>Body style:</strong>
      <%= @vehicle.body_style %>
    </p>

    <p>
      <strong>Engine type:</strong>
      <%= @vehicle.engine_type %>
    </p>

    <p>
      <strong>Milage:</strong>
      <%= @vehicle.milage %>
    </p>

    <p>
      <strong>Vin:</strong>
      <%= @vehicle.vin %>
    </p>

    <p>
      <strong>Notes:</strong>
      <%= @vehicle.notes %>
    </p>
  </div>

  <div class="col-md-6 left-al">

    <div class="vehicle-img">
      <%= image_tag @vehicle.image, width: "100%", alt: "uploaded image" %>
    </div>
    
    <p>
      <strong>Bought date:</strong>
      <%= @vehicle.bought_date %>
    </p>

    <p>
      <strong>Bought milage:</strong>
      <%= @vehicle.bought_milage %>
    </p>

    <p>
      <strong>Bought price:</strong>
      <%= @vehicle.bought_price %>
    </p>

    <p>
      <strong>Added:</strong>
      <%= distance_of_time_in_words(@vehicle.created_at, Time.now) %> ago
    </p>

  </div>


</div>

<div class="row al-center" >
  <div class="col-md-12">
    <%= link_to 'Update', edit_vehicle_path(@vehicle) if logged_in?(:site_admin) %> |
    <%= link_to 'Back', garage_path %>
  </div>
</div>  

